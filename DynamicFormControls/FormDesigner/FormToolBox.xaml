                            <TextBox x:Name="TextBoxXPosition" Margin="72,10,0,31" KeyUp="TextBoxXPosition_KeyUp" Height="23" Width="64" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderYPosition" Margin="141,41,0,0" ValueChanged="SliderYPosition_ValueChanged" Height="23" Width="153" HorizontalAlignment="Left" Grid.ColumnSpan="2" />
                            <TextBox x:Name="TextBoxYPosition" Margin="219,10,0,31" KeyUp="TextBoxYPosition_KeyUp" Height="23" Width="75" HorizontalAlignment="Left" Grid.ColumnSpan="2" />
                        </Grid>
                        <Grid Height="56" HorizontalAlignment="Left" Width="412">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="168*" />
                                <ColumnDefinition Width="59*" />
                            </Grid.ColumnDefinitions>
                            <Label Content="Width" Margin="10,1,0,29" Height="26" HorizontalAlignment="Left" Width="56" />
                            <Label Content="Height" Margin="176,1,0,29" Height="26" HorizontalAlignment="Left" Width="51" />
                            <Slider x:Name="SliderFieldWidth" Margin="8,32,0,2" Height="22" ValueChanged="SliderFieldWidth_ValueChanged" HorizontalAlignment="Left" Width="147" />
                            <TextBox x:Name="TextBoxFieldWidth" Margin="95,4,0,30" Width="76" Height="22" KeyUp="TextBoxWidth_KeyUp" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldHeight" Margin="184,32,0,0" Width="128"  Height="24" ValueChanged="SliderFieldHeight_ValueChanged" HorizontalAlignment="Left" />
                            <TextBox x:Name="TextBoxFieldHeight" Margin="227,5,0,29" Width="64" Height="22" KeyUp="TextBoxHeight_KeyUp" HorizontalAlignment="Left" />
                        </Grid>
                        <Grid Height="63">
                            <Label Content="Border" Margin="0,18,0,19" Height="26" HorizontalAlignment="Left" Width="99" />
                            <TextBox x:Name="textBoxBorderRedValue" Height="22" Width="32" Margin="93,4,0,37" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxBorderBlueValue" Height="22" Width="32" Margin="167,4,0,37" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxBorderGreenValue" Height="22" Width="32" Margin="130,4,0,37" HorizontalAlignment="Left"></TextBox>
                            <Rectangle x:Name="RectangleFieldBorderColor" Fill="#FFF4F4F5" Height="24" Margin="204,5,0,34" Stroke="Black" Width="24" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldBorderRed" Minimum="0" Maximum="255" Margin="61,34,0,3" Height="26" Width="64" ValueChanged="SliderFieldBorderRed_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldBorderGreen" Minimum="0" Maximum="255" Margin="130,34,0,3" Height="26" Width="64" ValueChanged="SliderFieldBorderGreen_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldBorderBlue" Minimum="0" Maximum="255" Margin="199,34,0,3" Height="26" Width="64" ValueChanged="SliderFieldBorderBlue_ValueChanged" HorizontalAlignment="Left" />
                        </Grid>

                        <Grid Height="63">
                            <Label Content="Background" Margin="0,3,0,34" Height="26" HorizontalAlignment="Left" Width="99" />
                            <TextBox x:Name="textBoxBackgroundRedValue" Height="22" Width="32" Margin="93,2,0,39" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxBackgroundBlueValue" Height="22" Width="32" Margin="167,2,0,39" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxBackgroundGreenValue" Height="22" Width="32" Margin="130,2,0,39" HorizontalAlignment="Left"></TextBox>
                            <Rectangle x:Name="RectangleFieldBackgroundColor" Fill="#FFF4F4F5" Height="24" Margin="204,3,0,36" Stroke="Black" Width="24" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldBackgroundRed" Minimum="0" Maximum="255" Margin="61,32,0,5" Height="26" Width="64" ValueChanged="SliderFieldBackgroundRed_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldBackgroundGreen" Minimum="0" Maximum="255" Margin="130,32,0,5" Height="26" Width="64" ValueChanged="SliderFieldBackgroundGreen_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldBackgroundBlue" Minimum="0" Maximum="255" Margin="199,32,0,5" Height="26" Width="64" ValueChanged="SliderFieldBackgroundBlue_ValueChanged" HorizontalAlignment="Left" />
                        </Grid>

                        <Grid Height="63">
                            <Label Content="Foreground " Margin="0,3,0,34" Height="26" HorizontalAlignment="Left" Width="99" />
                            <TextBox x:Name="textBoxForegroundRedValue" Height="22" Width="32" Margin="93,1,0,40" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxForegroundBlueValue" Height="22" Width="32" Margin="167,1,0,40" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxForegroundGreenValue" Height="22" Width="32" Margin="130,1,0,40" HorizontalAlignment="Left"></TextBox>
                            <Rectangle x:Name="RectangleFieldForegroundColor" Fill="#FFF4F4F5" Height="24" Margin="204,2,0,37" Stroke="Black" Width="24" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldForegroundRed" Minimum="0" Maximum="255" Margin="61,32,0,5" Height="26" Width="64" ValueChanged="SliderFieldForegroundRed_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldForegroundGreen" Minimum="0" Maximum="255" Margin="130,32,0,5" Height="26" Width="64" ValueChanged="SliderFieldForegroundGreen_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldForegroundBlue" Minimum="0" Maximum="255" Margin="199,31,0,6" Height="26" Width="64" ValueChanged="SliderFieldForegroundBlue_ValueChanged" HorizontalAlignment="Left" />
                        </Grid>
                        <Grid Height="63">
                            <Label Content="Error" Margin="0,2,0,35" Height="26" HorizontalAlignment="Left" Width="99" />
                            <TextBox x:Name="textBoxErrorRedValue" Height="22" Width="32" Margin="93,1,0,40" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxErrorBlueValue" Height="22" Width="32" Margin="167,1,0,40" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxErrorGreenValue" Height="22" Width="32" Margin="130,1,0,40" HorizontalAlignment="Left"></TextBox>
                            <Rectangle x:Name="RectangleFieldErrorColor" Fill="#FFF4F4F5" Height="24" Margin="204,-1,0,40" Stroke="Black" Width="24" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldErrorRed" Minimum="0" Maximum="255" Margin="61,32,0,5" Height="26" Width="64" ValueChanged="SliderFieldErrorRed_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldErrorGreen" Minimum="0" Maximum="255" Margin="130,32,0,5" Height="26" Width="64" ValueChanged="SliderFieldErrorGreen_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFieldErrorBlue" Minimum="0" Maximum="255" Margin="199,31,0,6" Height="26" Width="64" ValueChanged="SliderFieldErrorBlue_ValueChanged" HorizontalAlignment="Left" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Form Style">
                <Grid Width="auto" Height="auto">
                    <StackPanel>
                        <Grid Height="auto" Width="auto">
                            <TextBlock HorizontalAlignment="Left" Margin="21,15,0,0" TextWrapping="Wrap" Text="Form Title" VerticalAlignment="Top" Width="59" />
                            <StackPanel>
                                <TextBox x:Name="TextBoxFormTitle" HorizontalAlignment="Left" Height="23" Margin="81,10,0,0" TextWrapping="Wrap" Text="Form Title" VerticalAlignment="Top" Width="168" />
                            </StackPanel>
                        </Grid>
                        <Grid Height="25">

                        </Grid>
                        <Grid Height="auto" Width="auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Label Content="Form Background Color" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="170" Margin="16,2,0,0" />

                            <Grid Height="64">
                                <Rectangle x:Name="RectangleFormBackgroundColor" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="24" Width="127" Margin="19,0,0,12" Stroke="Black" VerticalAlignment="Bottom" />
                                <TextBox x:Name="textBoxFormBackgroundRedValue" Height="22" Width="32" Margin="202,2,0,40" HorizontalAlignment="Left"></TextBox>
                                <TextBox x:Name="textBoxFormBackgroundBlueValue" Height="22" Width="32" Margin="338,2,0,40" HorizontalAlignment="Left"></TextBox>
                                <TextBox x:Name="textBoxFormBackgroundGreenValue" Height="22" Width="32" Margin="271,2,0,40" HorizontalAlignment="Left"></TextBox>
