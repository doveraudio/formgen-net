<Window x:Class="FormDesigner.FormToolBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FormToolBox" Height="543" Width="525">
    <Grid HorizontalAlignment="Left" Width="344" Height="452" VerticalAlignment="Top">
        <TabControl Margin="0,10,-170,-62" HorizontalAlignment="Left" Width="514" Height="504" VerticalAlignment="Top">
            <TabItem Header="Field Database" Width="auto" Height="auto">
                <Grid Background="#FFE5E5E5" Height="426" VerticalAlignment="Top">
                    <StackPanel x:Name="StackPanelLeftColumn" HorizontalAlignment="Left" Height="320" Margin="152,10,0,0" VerticalAlignment="Top" Width="227">
                        <TextBox x:Name="TextBoxName" Height="24" />
                        <TextBox x:Name="TextBoxLabel" Height="24" />
                        <TextBox x:Name="TextBoxColumn" Height="24" />
                        <TextBox x:Name="TextBoxValue" Height="24" />
                        <ComboBox x:Name="ListBoxDatabaseType" Height="24">
                            <ComboBoxItem x:Name="DBchar" Selected="setVarType">CHAR[Length]</ComboBoxItem>
                            <ComboBoxItem x:Name="DBvarchar" Selected="setVarType">VARCHAR[Length]</ComboBoxItem>
                            <ComboBoxItem x:Name="DBtext" Selected="setVarType">TEXT[Length]</ComboBoxItem>
                            <ComboBoxItem x:Name="DBmediumtext" Selected="setVarType">MEDIUMTEXT[Length]</ComboBoxItem>
                            <ComboBoxItem x:Name="DBlongtext" Selected="setVarType">LONGTEXT[Length]</ComboBoxItem>
                            <ComboBoxItem x:Name="DBint" Selected="setVarType">INT[Length]</ComboBoxItem>
                            <ComboBoxItem x:Name="DBdouble" Selected="setVarType">DOUBLE[Length, Decimals]</ComboBoxItem>
                            <ComboBoxItem x:Name="DBdecimal" Selected="setVarType">DECIMAL[Length, Decimals]</ComboBoxItem>
                            <ComboBoxItem x:Name="DBdate" Selected="setVarType">DATE (YYYY-MM-DD)</ComboBoxItem>
                            <ComboBoxItem x:Name="DBdatetime" Selected="setVarType">DATETIME (YYYY-MM-DD HH:MM:SS)</ComboBoxItem>
                            <ComboBoxItem x:Name="DBtime" Selected="setVarType">TIME (HH:MM:SS)</ComboBoxItem>
                        </ComboBox>
                        <Grid Height="64" x:Name="GridSize">
                            <Slider x:Name="SliderMValue" HorizontalAlignment="Left" Margin="1,10,0,0" VerticalAlignment="Top" Width="104" Minimum="0" ValueChanged="SliderMValue_ValueChanged" SmallChange="1" />
                            <TextBox x:Name="TextBoxMValue" HorizontalAlignment="Left" Height="24" Margin="1,36,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="104" KeyUp="TextBoxMValue_KeyUp" />
                            <GridSplitter x:Name="GridSplit" HorizontalAlignment="Left" Height="64" Margin="110,0,0,0" VerticalAlignment="Top" Width="5" />
                            <Slider x:Name="SliderDValue" HorizontalAlignment="Left" Margin="116,10,0,0" VerticalAlignment="Top" Width="101" Minimum="0"  ValueChanged="SliderDValue_ValueChanged" SmallChange="1" />
                            <TextBox x:Name="TextBoxDValue" HorizontalAlignment="Left" Height="24" Margin="117,36,0,0" TextWrapping="Wrap"   Text="" VerticalAlignment="Top" Width="100" KeyUp="TextBoxDValue_KeyUp" />
                        </Grid>
                        <TextBox x:Name="TextBoxTableName" Height="24" />
                        <ComboBox x:Name="ComboBoxFieldType"  Height="24" />
                        <TextBox x:Name="TextBoxKeyName"  Height="24" />
                        <TextBox x:Name="TextBoxKeyTableName" Height="24" />
                        <TextBox x:Name="TextBoxKeyValue" Height="26" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Left" Height="320" Margin="0,10,0,0" VerticalAlignment="Top" Width="152">
                        <Label Content="Field Name" Margin="0,0,24,0" Height="24" />
                        <Label Content="Field Label" Margin="0,0,24,0" Height="24" />
                        <Label Content="Field Database Column" Margin="0,0,10,0" Height="24" />
                        <Label Content="Field Value" Margin="0,0,-116,0" Height="24" />
                        <Label Content="Database Type" Margin="0,0,24,0" />
                        <Grid Height="60">
                            <TextBlock x:Name="TextBlockInteger" Height="22" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Numerical Places" VerticalAlignment="Top" Margin="0,10,0,0" />
                            <TextBlock x:Name="TextBlockDecimal" Height="22" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Decimal Places" VerticalAlignment="Top" Margin="51,38,0,0" />
                        </Grid>

                        <Label Content="Table Name" Margin="0,0,24,0" Height="24" />
                        <Label Content="Form Field Type" Margin="0,0,-75,0" Height="24" />
                        <Label Content="Key Column Name" Margin="0,0,-75,0" Height="24" />
                        <Label Content="Key Table Name" Margin="0,0,-75,0" Height="24" />
                        <Label Content="Key Value" Margin="0,0,-75,0" Height="24" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Field Style" Width="auto" Height="auto">
                <Grid>
                    <StackPanel>
                        <Grid Height="64" HorizontalAlignment="Left" Width="328">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="168*" />
                                <ColumnDefinition Width="59*" />
                            </Grid.ColumnDefinitions>
