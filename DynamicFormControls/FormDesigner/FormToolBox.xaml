                                <Slider x:Name="SliderFormBackgroundGreen" Minimum="0" Maximum="255" Margin="258,30,0,0" Height="26" Width="64"  VerticalAlignment="Top" ValueChanged="SliderFormBackgroundGreen_ValueChanged" HorizontalAlignment="Left" />
                                <Slider x:Name="SliderFormBackgroundBlue" Minimum="0" Maximum="255" Margin="327,30,0,0" Height="26" Width="64" VerticalAlignment="Top" ValueChanged="SliderFormBackgroundBlue_ValueChanged" HorizontalAlignment="Left" />
                            </Grid>
                        </Grid>
                        <Grid Height="25">

                        </Grid>
                        <Grid Height="auto" Width="auto">
                            <Label Content="Form Border Color" Width="256" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="16,2,0,0" />
                            <Rectangle x:Name="RectangleFormBorderColor" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="24" Width="129" Margin="16,31,0,0" Stroke="Black" VerticalAlignment="Top" />
                            <TextBox x:Name="textBoxFormBorderRedValue" Height="22" Width="32" Margin="203,0,0,41" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxFormBorderBlueValue" Height="22" Width="32" Margin="336,-2,0,43" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxFormBorderGreenValue" Height="22" Width="32" Margin="271,0,0,41" HorizontalAlignment="Left"></TextBox>
                            <Slider x:Name="SliderFormBorderRed" Minimum="0" Maximum="255" Margin="188,32,0,0" Height="24" Width="64" VerticalAlignment="Top" ValueChanged="SliderFormBorderRed_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFormBorderGreen" Minimum="0" Maximum="255" Margin="256,32,0,0" Height="24" Width="64" VerticalAlignment="Top" ValueChanged="SliderFormBorderGreen_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFormBorderBlue" Minimum="0" Maximum="255" Margin="327,31,0,0" Height="24" Width="64" VerticalAlignment="Top" ValueChanged="SliderFormBorderBlue_ValueChanged" HorizontalAlignment="Left" />
                        </Grid>
                        <Grid Height="25">

                        </Grid>
                        <Grid Height="auto" Width="494" HorizontalAlignment="Left">
                            <Label Content="Form Foreground Color" Margin="15,3,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="182" />
                            <Rectangle x:Name="RectangleFormForegroundColor" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="24" Width="127" Margin="16,32,0,0" Stroke="Black" VerticalAlignment="Top" />
                            <TextBox x:Name="textBoxFormForegroundRedValue" Height="22" Width="32" Margin="202,5,0,36" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxFormForegroundBlueValue" Height="22" Width="32" Margin="338,3,0,38" HorizontalAlignment="Left"></TextBox>
                            <TextBox x:Name="textBoxFormForegroundGreenValue" Height="22" Width="32" Margin="272,4,0,37" HorizontalAlignment="Left"></TextBox>
                            <Slider x:Name="SliderFormForegroundRed" Minimum="0" Maximum="255" Margin="186,31,0,0" Height="24" Width="64" VerticalAlignment="Top" ValueChanged="SliderFormForegroundRed_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFormForegroundGreen" Minimum="0" Maximum="255" Margin="255,31,0,0" Height="24" Width="64" VerticalAlignment="Top" ValueChanged="SliderFormForegroundGreen_ValueChanged" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFormForegroundBlue" Minimum="0" Maximum="255" Margin="325,0,0,10" Height="24" Width="64" VerticalAlignment="Bottom" ValueChanged="SliderFormForegroundBlue_ValueChanged" HorizontalAlignment="Left" />
                        </Grid>
                        <Grid Height="25">

                        </Grid>
                        <Grid Height="97" HorizontalAlignment="Left" Width="251">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Content="Form Width" Margin="20,7,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />
                            <Label Content="Form Height" HorizontalAlignment="Left" Margin="110,6,0,0" Height="24" Width="92" VerticalAlignment="Top" />
                            <Slider x:Name="SliderFormWidth" Margin="33,35,0,0"  Height="24" Width="64" VerticalAlignment="Top" ValueChanged="SliderFormWidth_ValueChanged" HorizontalAlignment="Left" />
                            <TextBox x:Name="TextBoxFormWidth" Margin="28,64,0,0"  Height="24" Width="64" VerticalAlignment="Top" KeyUp="TextBoxWidth_KeyUp" HorizontalAlignment="Left" />
                            <Slider x:Name="SliderFormHeight" Margin="109,35,0,35" HorizontalAlignment="Left" Width="64" ValueChanged="SliderFormHeight_ValueChanged" />
                            <TextBox x:Name="TextBoxFormHeight" Margin="110,64,0,0"  Height="24" Width="64" VerticalAlignment="Top" KeyUp="TextBoxHeight_KeyUp" HorizontalAlignment="Left" />
                        </Grid>
